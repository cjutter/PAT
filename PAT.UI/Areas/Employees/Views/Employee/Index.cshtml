@model PAT.UI.Areas.Employees.Models.AddEmployeeViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
@using (Html.BeginForm(null,null,FormMethod.Get, new {id ="employeeAddFOrm"}))
{
    <div class="col-sm-8 text-left">
        <h1>Add Employee</h1>
        <p>Enter employee and optional employee dependant information</p>
        <hr>

        @Html.LabelFor(m => m.EmployeeID)
        @Html.TextBoxFor(m => m.EmployeeID)
        <div>
            @Html.ValidationMessageFor(m => m.EmployeeID)
        </div>

        @Html.LabelFor(m => m.FirstName)
        @Html.TextBoxFor(m => m.FirstName)
        <div>
            @Html.ValidationMessageFor(m => m.FirstName)
        </div>
        @Html.LabelFor(m => m.LastName)
        @Html.TextBoxFor(m => m.LastName)
        <div>
            @Html.ValidationMessageFor(m => m.LastName)
        </div>
     
        <button id="btnAdd" class="btn btn-primary">Add Employee</button>
        <div id="result" >


        </div>

    </div>
}
</body>
</html>
